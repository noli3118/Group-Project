    <form method="post" action="/add_project" enctype="multipart/form-data">
        <h1>Add/Update a Project</h1>
        <div>
            <label for="project_name">Project Name</label>
        </div>
        <div>
            <input type="text" id="project_name" name="project_name" />
        </div>
        <div>
            <label for="project_description">Project Description</label>
        </div>
        <div>
            <textarea id="project_description" name="project_description" rows="3" cols="100"></textarea>
        </div>
        <div>
            <label for="project_image">Project Image</label>
            <input type="file" id="project_image" name="project_image" />
        </div>
        <div>
            <input type="hidden" id="username" value={{username}} name="username">
            <input type="submit" value="Add/Update">
        </div>
    </form>
</div>